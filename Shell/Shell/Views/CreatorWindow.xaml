<Window x:Class="Shell.Views.CreatorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Create" Height="120" Width="264.8" ResizeMode="NoResize" WindowStartupLocation="CenterScreen">
    <Grid Background="PaleTurquoise">
        <Label Content="Name:" Margin="10,10,0,0" HorizontalAlignment="Left" Width="42" Height="28" VerticalAlignment="Top"/>
        <TextBox x:Name="tbName" Margin="54,10,0,0" HorizontalAlignment="Left" Width="193" Height="28" VerticalAlignment="Top"/>
        <Button x:Name="btnCreate" Width="100" Height="30" Content="Create" Margin="10,43,0,0" VerticalAlignment="Top" Background="White" HorizontalAlignment="Left" Click="btnCreate_Click"/>
        <Button x:Name="btnCancel" Width="100" Height="30" Content="Cancel" Margin="148,43,0,0" VerticalAlignment="Top" Background="White" HorizontalAlignment="Left" Click="btnCancel_Click"/>
    </Grid>
</Window>
